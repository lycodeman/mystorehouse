<?xml version="1.0" encoding="utf-8"?>
<com.example.mystorehouse.screenadapter.view.SALinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="360px"
        android:layout_height="640px"
        android:paddingLeft="30px"
        android:paddingVertical="50px"
        android:background="@color/colorAccent" />

    <TextView
        android:layout_gravity="bottom|right"
        android:id="@+id/tv_info_2"
        android:layout_width="360px"
        android:layout_height="640px"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent" />
</com.example.mystorehouse.screenadapter.view.SALinearLayout>